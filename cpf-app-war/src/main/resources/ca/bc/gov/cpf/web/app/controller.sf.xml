<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:p="http://www.springframework.org/schema/p"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
  "
>
  <bean
    id="cpfCustomCssUrl"
    class="java.lang.String"
  >
    <constructor-arg>
      <value>/css/bcgov.css</value>
    </constructor-arg>
  </bean>
  
  <bean
    id="cpfCustomBrand"
    class="com.revolsys.ui.model.Brand"
    p:brandUri="http://www2.gov.bc.ca/"
    p:brandImageSrc="/pub/cpf/images/gov3_bc_logo.png"
    p:brandSmallImageSrc="/pub/cpf/images/gov3_bc_logo_mobile.png"
  />

  <bean
    id="footerMenu"
    p:id="footerMenu"
    class="com.revolsys.ui.model.Navbar"
    p:navbarCssClass="navbar-fixed-bottom"
  >
    <property name="menus">
      <list>
        <bean
          p:title="About gov.bc.ca"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/about-gov-bc-ca" />
        <bean
          p:title="Disclaimer"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/home/disclaimer" />
        <bean
          p:title="Privacy"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/home/privacy" />
        <bean
          p:title="Accessibility"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/home/accessibility" />
        <bean
          p:title="Copyright"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/home/copyright" />
        <bean
          p:title="Contact Us"
          class="com.revolsys.ui.model.Menu"
          p:uri="http://www2.gov.bc.ca/gov/content/home/contact-us" />
      </list>
    </property>
  </bean>


  <mvc:resources
    mapping="/css/**"
    location="/css/" />

  <mvc:resources
    mapping="/js/**"
    location="/js/" />

  <mvc:resources
    mapping="/images/**"
    location="/images/" />

  <mvc:resources
    mapping="/kml/**"
    location="/kml/" />

  <bean
    name="/secure/"
    class="com.revolsys.ui.web.controller.ViewNameController"
    p:viewName="redirect:/secure/ws/" />

  <bean
    name="/secure/index"
    class="com.revolsys.ui.web.controller.ViewNameController"
    p:viewName="redirect:/secure/ws/" />

  <bean
    name="/secure/ws*"
    class="com.revolsys.ui.web.controller.PathAliasController"
    p:prefix="/secure/ws"
    p:aliasPrefix="/ws" />

  <bean
    name="/secure/ws/**"
    class="com.revolsys.ui.web.controller.PathAliasController"
    p:prefix="/secure/ws"
    p:aliasPrefix="/ws" />

  <bean
    name="/secure/admin/**"
    class="com.revolsys.ui.web.controller.PathAliasController"
    p:prefix="/secure/admin"
    p:aliasPrefix="/admin" />
</beans>
